    "@eslint/js": "^9.33.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@types/pino-http": "^6.1.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.40.0"
  }
