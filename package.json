  "author": "Mandoline AI <support@mandoline.ai>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mandoline-ai/mandoline-mcp-server.git"
  },
  "homepage": "https://github.com/mandoline-ai/mandoline-mcp-server#readme",
