    "url": "https://github.com/mandoline-ai/mandoline-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "mandoline": "^0.6.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.24.2"
